<Window x:Class="ClientForMessenger.MainWindow" x:Name="Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientForMessenger"
        mc:Ignorable="d"
        Title="Animessenger" Height="450" Width="800" Loaded="Main_Loaded_1" Icon="Resources/senchou.png">
    
    <Grid x:Name="MainContainer">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="205*"></ColumnDefinition>
            <ColumnDefinition Width="587*"></ColumnDefinition>
        </Grid.ColumnDefinitions>        
        <StackPanel x:Name="ContactsPanel" Grid.Column="0"></StackPanel>        
        <Grid Grid.Column="1">            
            <Grid.RowDefinitions>
                <RowDefinition Height="61*"></RowDefinition>
                <RowDefinition Height="9*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border BorderBrush="Gray" BorderThickness="2">
                <StackPanel x:Name="MessagePanel" Grid.Row="0"></StackPanel>
            </Border>
        </Grid>        
    </Grid>    
</Window>
