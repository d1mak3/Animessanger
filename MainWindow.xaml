<Window x:Class="ClientForMessenger.MainWindow" x:Name="Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientForMessenger"
        mc:Ignorable="d"        
        Title="Animessenger" Height="450" Width="800" Loaded="Main_Loaded_1" Icon="Resources/senchou.png" SizeChanged="Main_SizeChanged" Closed="Main_Closed" IsVisibleChanged="Main_IsVisibleChanged">

    <Grid x:Name="MainContainer">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"></ColumnDefinition>
            <ColumnDefinition Width="555*"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="19*"></RowDefinition>
        </Grid.RowDefinitions>
        <!--Картинки по бокам-->
        <Image Source="Resources/Background1.png" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="3" VerticalAlignment="Stretch" Stretch="Fill"/>
        <!--Сообщения-->
        <!--Список сообщений-->
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="389*"></RowDefinition>
                <RowDefinition Height="31*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border BorderBrush="Gray" BorderThickness="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#FF7ABCFF" >
                    <StackPanel x:Name="MessagePanel" Grid.Row="0" Loaded="MessagePanel_Loaded" Background="#FF7ABCFF" CanHorizontallyScroll="True"></StackPanel>
                </ScrollViewer>
            </Border>
            <!--Ввод и кнопка отправки-->
            <TextBox Grid.Row="1" Background="#FFBDBDBD" HorizontalAlignment="Left" MinWidth="500" x:Name="TypeTextBox" TextWrapping="Wrap"/>
            <Button Grid.Row="1" Background="#FF263AFF" HorizontalAlignment="Right" MinWidth="80" Content="Send" x:Name="SendButton" Click="SendButton_Click"/>
        </Grid>  
        <!--Доп функции-->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="Settings" HorizontalAlignment="Right" MinWidth="100" Content="Settings" Background="#FFAFDEFF" Click="Settings_Click"></Button>
            <Button x:Name="Admin" HorizontalAlignment="Right" MinWidth="100" Content="Admin" Background="#FFAFDEFF" Visibility="Hidden"></Button>                        
        </StackPanel>
        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="Logout" Content="Log out" MinWidth="100" Background="#FFAFDEFF" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Window>
